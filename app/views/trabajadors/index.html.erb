<p id="notice"><%= notice %></p>

<h1>Lista de Trabajadores</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Oficio</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajadors.each do |trabajador| %>
      <tr>
        <td><%= trabajador.nombre %></td>
        <td><%= trabajador.apellidos %></td>
        <td><%= trabajador.oficio %></td>
        <td><%= trabajador.telefono %></td>
        <td><%= trabajador.direccion %></td>
        <td><%= link_to 'Show', trabajador %></td>
        <td><%= link_to 'Edit', edit_trabajador_path(trabajador) %></td>
        <td><%= link_to 'Destroy', trabajador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

